<div class="container">
<div class="row">
  <div class="col-md-12">
    <h1>Entrees</h1>
    <%= link_to "Download CSV", entries_path(format: "csv") %>
    <table>
      <thead>
        <tr>
          <th width="15%">Name</th>
          <th width="25%">Email</th>
          <th width="15%">Phone</th>
          <th width="15%">City</th>
          <th width="25%">School Or Business</th>
          <th width="15%">More info?</th>
          <th>Views</th>
        </tr>
      </thead>
      <tbody>
        <% @entrants.each do |e| %>
          <tr>
            <td><%= e.first_name %> <%= e.last_name %></td>
            <td><%= e.email %></td>
            <td><%= e.phone  %></td>
            <td><%= e.city %></td>
            <td><%= e.school_or_business %></td>
            <td><%= e.know_more %></td>
            <td><%= link_to '<i class="fa fa-trash-o"></i> Delete'.html_safe, e, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% if @entrants.size == 0 %>
      <center>
        <h3>There are currently no entrants.<br> Please check back later.</h3>
      </center>
    <% end %>
    <center>
      <%= will_paginate @entrants %>
    </center>
  </div>
</div>
<% if user_signed_in? %>
  <%= link_to "Logout", destroy_user_session_path, method: :delete %>
<% end %>
</div>
